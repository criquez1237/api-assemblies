tests {
  test("Response status is 200 or 400 or 403", function() {
    expect([200, 400, 403]).to.include(res.getStatus());
  });
  
  test("If successful, order is deleted", function() {
    if (res.getStatus() === 200) {
      expect(res.getBody().success).to.equal(true);
      expect(res.getBody().message).to.equal("Orden eliminada exitosamente");
    }
  });
  
  test("If forbidden, only ADMIN can delete", function() {
    if (res.getStatus() === 403) {
      // CLIENT or MANAGEMENT role cannot delete orders
      expect(res.getStatus()).to.equal(403);
    }
  });
  
  test("If error, appropriate message is returned", function() {
    if (res.getStatus() === 400) {
      expect(res.getBody().success).to.equal(false);
      expect(res.getBody().message).to.contain("Error al eliminar orden");
    }
  });
}
